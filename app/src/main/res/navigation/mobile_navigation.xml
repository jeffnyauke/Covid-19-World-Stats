<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_global">

    <fragment
        android:id="@+id/navigation_global"
        android:name="dev.jeffnyauke.covid19stats.ui.main.ui.global.GlobalFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_global" />
    <fragment
        android:id="@+id/navigation_country_details"
        android:name="dev.jeffnyauke.covid19stats.ui.main.ui.countries.CountryDetailsFragment"
        tools:layout="@layout/fragment_global">
        <argument
            android:name="country"
            app:argType="dev.jeffnyauke.covid19stats.model.Country" />
    </fragment>

    <fragment
        android:id="@+id/navigation_country"
        android:name="dev.jeffnyauke.covid19stats.ui.main.ui.countries.CountryFragment"
        android:label="@string/title_country"
        tools:layout="@layout/fragment_country">
        <action
            android:id="@+id/action_CountryFragment_to_CountryDetailsFragment"
            app:destination="@id/navigation_country_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_news"
        android:name="dev.jeffnyauke.covid19stats.ui.main.ui.news.NotificationsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />
</navigation>